<div class="container">
	<form action="/zoos/<%=@zoo.id %>/edit" method="POST">
		<input type="hidden" value="PUT" name="_method">
		<input type="text" name="zoo[name]" value="<%=@zoo.name%>">
		<input type="text" name="zoo[location]" value="<%=@zoo.location %>">

		<input type="submit" value="Submit Edited Zoo">
	</form>

	<form action="/zoos/<%= @zoo.id %>" method="POST">
		<input type="hidden" value="DELETE" name="_method">
		<input type="submit" value="Delete this Zoo">
	</form>

</div>